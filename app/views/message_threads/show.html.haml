- title @message_thread.project.name, @message_thread.name

.page-header.clearfix
  .btn-toolbar.pull-right
    = link_to new_message_path(thread_id: @message_thread.id), class: "btn btn-primary" do
      %i.icon-edit.icon-white
      New Message
    = link_to edit_message_thread_path(@message_thread), class: 'btn' do
      %i.icon-asterisk
      Options
  %h1= @message_thread.name
  %h4.muted in #{link_to @message_thread.project.name, @message_thread.project}

.thread-messages
  = render @message_thread.messages.latest_first

/ %hr

/ %ul.breadcrumb
/   %li
/     = link_to @message_thread.project.name, @message_thread.project
/     %span.divider /
/   %li.active= link_to @message_thread.name, @message_thread