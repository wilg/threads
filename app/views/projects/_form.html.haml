= twitter_bootstrap_form_for @project, :html => { :class => 'form-horizontal'} do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :name

  = f.actions do
    = f.submit 'Save'
    = link_to "Cancel", projects_url, class: 'btn'